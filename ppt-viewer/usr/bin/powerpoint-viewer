# vars
# ----
echo "$@" > /tmp/powerpoint-viwer.args
PPT_DIR="/usr/share/aurex-wine/ppt-viewer"
PPT_EXE="$PPT_DIR/PowerPointViewer.exe"
PPT_EULA="$PPT_DIR/EULA-PowerPointViewer.txt"
PPT_REG="$PPT_DIR/reg"
WINEPREFIX="$HOME/.wine-ppt"

# main
aw-install --wineprefix="$WINEPREFIX" --regfiles="$PPT_REG" --eula="$PPT_EULA" $PPT_EXE /quiet || exit 1

rc=0
# open required document
export WINEPREFIX
wine C:\\\\windows\\\\command\\\\start.exe /Unix $WINEPREFIX/dosdevices/c:/users/$USER/Start\ Menu/Programs/Visor\ de\ Microsoft\ PowerPoint\ .lnk "z:$@" || rc=$?

exit $rc || rc=$?
